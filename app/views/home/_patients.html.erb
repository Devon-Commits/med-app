<p>Patients on your account:  <%= link_to "Add Patient", new_patient_path, class:'btn btn-info btn-sm' %></p>
<div class="container">
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th class="col-4" scope="col">Name</th>
        <th class="col-4" scope="col">Address</th>
        <th class="col-2" scope="col">Account</th>
        <th class="col-2" scope="col">Show</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% current_account.patients.limit(3).each do |patient| %>

        <tr>
          <td scope="row"><%= patient.name %></td>
          <td><%= patient.address %></td>
          <td class="text-center"><%= patient.account_id %></td>
          <td class="text-center"><%= link_to "Show this Patient", patient, class:'rounded-pill btn btn-secondary btn-sm' %></td>
        </tr>
                  
      <% end %>
    </tbody>
  </table>
</div>