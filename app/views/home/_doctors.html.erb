<p>Doctors on your account:  <%= link_to "Add Doctor", new_doctor_path, class:'btn btn-info btn-sm' %></p>
<div class="container">
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th class="col-4" scope="col">Doctor Name</th>
        <th class="col-6" scope="col">Field</th>
        <th class="col-2" scope="col">Show</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">

      <% if @doctors.empty? %>

        <tr>
          <td colspan="4" class="text-center">Added Doctors will appear here</td>
        </tr>

      <% else %>

        <% @doctors.limit(3).each do |doctor| %>

          <tr>
            <td scope="row"><%= doctor.name %></td>
            <td><%= doctor.field %></td>
            <td class="text-center"><%= link_to "Show this Doctor", doctor, class:'rounded-pill btn btn-secondary btn-sm border border-dark custom' %></td>
          </tr>
                    
        <% end %>

        <tr>
          <td class="text-center p-0" colspan="4"><%= link_to "See all Doctors", doctors_path, class:'btn btn-secondary form-control'  %></td>
        </tr>

      <% end %>
    </tbody>
  </table>
</div>