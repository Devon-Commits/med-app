<%= form_with(model: appointment) do |form| %>
  <% if appointment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-borderless table-sm">
    <tbody>

      <tr>
          <td><%= form.label :date %><%= form.date_field :date %></td>
          <td><%= form.label :time%><%= form.time_select :time ,:minute_step => 30 %></td>
      </tr>

      <tr>
        <td colspan="2"><hr/></td>
      </tr>

      <tr>
        <td><%= form.label :clinic_id %><%= form.collection_select(:clinic_id, current_account.clinics, :id, :name ) %></td>
      </tr>

      <tr>
        <td><%= form.label :doctor_id %><%= form.collection_select(:doctor_id, current_account.doctors, :id, :name ) %></td>
      </tr>

      <tr>
        <td><%= form.label :patient_id%><%= form.collection_select(:patient_id, current_account.patients, :id, :name ) %></td>
      </tr>

      <tr>
        <td colspan="2"><hr/></td>
      </tr>

      <tr>
        <td colspan="2"><%= form.label :visit_reason%><%= form.text_field :visit_reason, class:'form-control mb-3' %></td>
      </tr>

      <tr class="text center">
        <td><%= form.submit %></td>
      </tr>

    </tbody>
  </table>

    <% form.label :account_id%>
    <%= form.hidden_field :account_id, value: current_account.id %>

    <br/>
    
<% end %>
